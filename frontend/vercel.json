{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/[...path].js": {
      "maxDuration": 300,
      "memory": 1024
    }
  },
  "routes": [
    { "handle": "filesystem" },
    { "src": "/api/(.*)", "dest": "/api/[...path]" },
    { "src": "/(.*)",     "dest": "/index.html"    }
  ]
}
